<table>
	<thead>
		<tr>
			<th>Type</th>
			<th>Title</th>
			<th>Description</th>
			<th>Lost by</th>
			<% if show_links %>
			<th></th>
			<th></th>
			<th></th>
			<% end %>
		</tr>
	</thead>

	<tbody>
		<% @items.each do |item| %>
		<tr>
			<td><%= item.type.title %></td>
			<td><%= item.title %></td>
			<td><%= item.description %></td>
			<td><%= item.owner %></td>
			<% if show_links %>
				<td><%= link_to 'Show', item %></td>
				<td><%= link_to 'Edit', edit_item_path(item) %></td>
				<td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			<% end %>
		</tr>
		<% end %>
	</tbody>
</table>